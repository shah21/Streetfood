<%- include('../includes/head.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs') %>  
<section class="cart container">
    <h2 class="cart-text">My Cart</h2>
    <hr class="hr" width="80px">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><span class="text-muted">Subtotal</span> :  <span id="totalPrice">&#8377;<%= cart.total %></span></h5> 
            <!-- <span class="noOfItems">(2 Items)</span> -->
            <% if(cart.total > 0){ %>
            <a href="/delivery-address" class="btn btn-success">Proceed to Buy</a>
            <% } %>
        </div>
    </div>
    <% if(cart.items.length > 0){ %>
        <% cart.items.forEach(item=>{ %>
            <div class="card cart-item">
                <div class="card-body">
                  <img class="cart-item-image" src="<%= item.food.food_image %>" alt="">
                  <div class="card-text">
                    <h5><%= item.food.food_name %></h5>
                    <span class="text-muted">Quantity: <%= item.quantity %> </span><br>
                    <span>Price: &#8377;<%= item.food.food_price %></span>
                  </div>
                  <div class="right-side">
                    <!-- <input type="hidden" name="id" value="<%= item.foodId %>"/> -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    <a href="" onclick="deleteItem(this,'<%= item.foodId %>')"  class="btn btn-danger cart-delete">Remove</a>
                  </div>
                </div>
            </div>
        <% }); %>
    
    <% }else{ %>
        <div class="no-items">
            <h5 class="no-item-text">Your Streetfood Cart is empty.</h5>
            <a href="/">continue shopping</a>
        </div>
       
    <% } %>    

</section>    


<script src="/js/cart-script.js"></script>
<%- include('../includes/end.ejs') %>