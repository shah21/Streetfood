<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <section class="account container">
        <h2 class="account-text">My Account</h2>
        <hr class="hr" width="80px">

        <ul class="list-group">
            <li class="list-group-item"><span class="text-muted">Email</span> <h6><%= user.email %></h6></li>
            <% if(user.hotel_name.length > 0){ %>
                <li class="list-group-item"><span class="text-muted">Hotel Name</span> <h5><%= user.hotel_name %></h5></li>
            <% } %>   
            <% if(user.address) { %>

                
                <li class="list-group-item">
                <div class="address-card">

                    <span class="text-muted">Default Address</span><br>

                    <span class="address-text"> <span class="text-muted label-address">Full name:</span> <%= user.address[0].name %> </span><br>
                    <span class="address-text"> <span class="text-muted label-address">Phone:</span>  <%= user.address[0].phone %> </span><br>
                    <span class="address-text"> <span class="text-muted label-address">Pincode:</span> <%= user.address[0].pincode %> </span><br>
                    <span class="address-text"> <span class="text-muted label-address">Address Line 1:</span> <%= user.address[0].address_line1 %> </span><br>
                    <% if(user.address[0].address_line2 > 0) { %>
                        <span class="address-text"> <span class="text-muted label-address">Address Line 2:</span> <%= user.address[0].address_line2 %> </span><br>
                    <% } %>   
                    <% if(user.address[0].landmark > 0) { %>
                    <span class="address-text"> <span class="text-muted label-address">Landmark:</span>  <%= user.address[0].landmark %> </span><br>
                    <% } %>   
                    <span class="address-text"> <span class="text-muted label-address">City:</span>  <%= user.address[0].city %> </span><br>
                    <span class="address-text"> <span class="text-muted label-address">State:</span> <%= user.address[0].state %> </span>

            
                </div>
                </li>
            <% }else{ %>
                <li class="list-group-item"><a href="/add-delivery-address/?fromPage=account">Add default address</a></li>
            <% } %>    
            <li class="list-group-item"><a href="/forgot-password">Change password</a></li>
          </ul>
    </section>


<%- include('../includes/end.ejs') %>