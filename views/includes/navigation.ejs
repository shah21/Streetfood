<link href="/css/navigation.css" rel="stylesheet"/>

<nav class="navbar">
    <div class="brand-title"><a href="/"></a><strong>Streetfood.com</strong></a></div>
    <a href="#" class="toggle-button">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </a>
    <div class="navbar-links">
        <ul>
            <!-- <li><a href="#">Shops</a></li> -->
            <% if(userLoggedIn){ %>
                <li><a href="/" class="<%= path === '/' ? 'active' : '' %>">Find food</a></li>
                <li><a href="/#categories" class="<%= path === '/categories' ? 'active' : '' %>">Categories</a></li>
                <li><a href="/#hotels" class="<%= path === '/hotels' ? 'active' : '' %>">Hotels</a></li>
                <li><a href="/#cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a></li>

                <% if(userType === 'hotel'){ %>
                    <li><a href="/manage-foods" class="<%= path === '/manage-foods' ? 'active' : '' %>">Manage Foods</a></li>    
                <% } %>

                <form id="navForm" action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    <li><a href="#" onclick="document.getElementById('navForm').submit();">Logout</a></li>
                </form>    
            <% }else{ %>
            <li><a href="/login" class="<%= path === '/login' ? 'active' : '' %>">Login</a></li>
            <li><a href="/signup" class="<%= path === '/signup' ? 'active' : '' %>">Signup</a></li>
            <% } %>
        </ul>
